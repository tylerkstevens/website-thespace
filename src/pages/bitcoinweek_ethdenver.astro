    <!-- 2026 ANNOUNCEMENT -->
    <section class="announcement">
      <div class="container">
        <div class="announcement-card">
          <div class="static-band"></div>
          <div class="announcement-content">
            <div class="next-freq">
              <span class="label">NEXT TRANSMISSION</span>
