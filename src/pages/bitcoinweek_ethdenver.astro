</Layout>

<style>
  /* ========================================
     DESIGN SYSTEM - Broadcast Signal
     ======================================== */

  @import url('https://fonts.googleapis.com/css2?family=VT323&family=IBM+Plex+Sans:wght@300;400;500;600&family=IBM+Plex+Mono:wght@400;500&display=swap');

  .bw-page {
    --void: #0a0a0a;
    --dark: #111111;
    --charcoal: #1a1a1a;
    --gray: #333333;
    --gray-light: #666666;
    --cyan: #00ffcc;
    --cyan-dim: #00aa88;
    --cyan-glow: rgba(0, 255, 204, 0.3);
    --amber: #ff9500;
    --amber-dim: #cc7700;
    --white: #ffffff;
    --white-dim: #aaaaaa;

    --font-display: 'VT323', monospace;
    --font-body: 'IBM Plex Sans', -apple-system, sans-serif;
    --font-mono: 'IBM Plex Mono', monospace;

    font-family: var(--font-body);
    background: var(--void);
    color: var(--white);
    overflow-x: hidden;
  }

  .container {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  /* ========================================
     HERO
     ======================================== */

  .hero {
    position: relative;
    min-height: 80vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background:
      radial-gradient(ellipse at center, var(--charcoal) 0%, var(--void) 70%);
    overflow: hidden;
  }

  .scanlines {
    position: absolute;
    inset: 0;
    background: repeating-linear-gradient(
      0deg,
      rgba(0, 0, 0, 0.15),
      rgba(0, 0, 0, 0.15) 1px,
      transparent 1px,
      transparent 2px
    );
    pointer-events: none;
    z-index: 2;
  }

  .static-overlay {
    position: absolute;
    inset: 0;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)'/%3E%3C/svg%3E");
    opacity: 0.03;
    pointer-events: none;
    z-index: 1;
  }

  .hero-content {
    position: relative;
    z-index: 10;
    text-align: center;
    padding: 2rem;
  }

  .frequency-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: var(--gray);
    border: 1px solid var(--cyan-dim);
    padding: 0.5rem 1rem;
    margin-bottom: 2rem;
    font-family: var(--font-mono);
    font-size: 0.875rem;
  }

  .freq-label {
    color: var(--gray-light);
    letter-spacing: 0.1em;
  }

  .freq-number {
    color: var(--cyan);
    font-weight: 500;
  }

  .hero h1 {
    font-family: var(--font-display);
    font-size: clamp(3rem, 12vw, 8rem);
    font-weight: 400;
    color: var(--white);
    margin: 0;
    line-height: 1;
    letter-spacing: 0.05em;
    text-shadow: 0 0 40px var(--cyan-glow);
  }

  /* Glitch effect */
  .glitch {
    position: relative;
    animation: glitch-skew 4s infinite linear alternate-reverse;
  }

  .glitch::before,
  .glitch::after {
    content: attr(data-text);
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .glitch::before {
    color: var(--cyan);
    animation: glitch-effect 3s infinite;
    clip-path: polygon(0 0, 100% 0, 100% 35%, 0 35%);
    transform: translate(-2px);
    opacity: 0.8;
  }

  .glitch::after {
    color: var(--amber);
    animation: glitch-effect 2s infinite;
    clip-path: polygon(0 65%, 100% 65%, 100% 100%, 0 100%);
    transform: translate(2px);
    opacity: 0.8;
  }

  @keyframes glitch-effect {
    0%, 90%, 100% { transform: translate(0); }
    92% { transform: translate(-5px, 2px); }
    94% { transform: translate(5px, -2px); }
    96% { transform: translate(-3px, 1px); }
    98% { transform: translate(3px, -1px); }
  }

  @keyframes glitch-skew {
    0%, 90%, 100% { transform: skew(0deg); }
    92% { transform: skew(1deg); }
    94% { transform: skew(-1deg); }
    96% { transform: skew(0.5deg); }
    98% { transform: skew(-0.5deg); }
  }

  .tagline {
    font-family: var(--font-mono);
    font-size: 1.25rem;
    color: var(--cyan);
    margin: 1.5rem 0;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
  }

  .signal-icon {
    animation: pulse 2s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.3; }
  }

  .location-date {
    font-family: var(--font-mono);
    font-size: 0.875rem;
    color: var(--gray-light);
    letter-spacing: 0.2em;
    margin-bottom: 2rem;
  }

  .divider {
    color: var(--amber);
    margin: 0 0.75rem;
  }

  .waveform {
    display: flex;
    justify-content: center;
    align-items: flex-end;
    gap: 4px;
    height: 40px;
    margin-top: 2rem;
  }

  .wave {
    width: 4px;
    background: var(--cyan);
    border-radius: 2px;
    animation: wave 1.2s ease-in-out infinite;
  }

  .wave:nth-child(1) { height: 20px; animation-delay: 0s; }
  .wave:nth-child(2) { height: 35px; animation-delay: 0.1s; }
  .wave:nth-child(3) { height: 25px; animation-delay: 0.2s; }
  .wave:nth-child(4) { height: 40px; animation-delay: 0.3s; }
  .wave:nth-child(5) { height: 15px; animation-delay: 0.4s; }

  @keyframes wave {
    0%, 100% { transform: scaleY(1); opacity: 0.5; }
    50% { transform: scaleY(0.5); opacity: 1; }
  }

  /* ========================================
     STATUS BAR
     ======================================== */

  .status-bar {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1rem;
    padding: 1rem 1.5rem;
    background: var(--dark);
    border-top: 1px solid var(--gray);
    border-bottom: 1px solid var(--gray);
  }

  .status-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.5rem 1rem;
    font-family: var(--font-mono);
    font-size: 0.75rem;
  }

  .status-label {
    color: var(--gray-light);
    letter-spacing: 0.1em;
  }

  .status-value {
    color: var(--white-dim);
  }

  .status-value.completed {
    color: var(--cyan);
  }

  .status-value.highlight {
    color: var(--amber);
    font-weight: 500;
  }

  /* ========================================
     OVERVIEW - Terminal Style
     ======================================== */

  .overview {
    padding: 5rem 0;
    background: var(--void);
  }

  .terminal-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 0.75rem 1rem;
    background: var(--gray);
    border-radius: 8px 8px 0 0;
  }

  .terminal-dots {
    display: flex;
    gap: 6px;
  }

  .terminal-dots span {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: var(--gray-light);
  }

  .terminal-dots span:first-child { background: #ff5f56; }
  .terminal-dots span:nth-child(2) { background: #ffbd2e; }
  .terminal-dots span:last-child { background: #27c93f; }

  .terminal-title {
    font-family: var(--font-mono);
    font-size: 0.8rem;
    color: var(--white-dim);
  }

  .terminal-body {
    background: var(--charcoal);
    padding: 2rem;
    border-radius: 0 0 8px 8px;
    border: 1px solid var(--gray);
    border-top: none;
  }

  .terminal-line {
    font-family: var(--font-mono);
    font-size: 0.95rem;
    color: var(--white-dim);
    margin: 0 0 1rem;
    line-height: 1.6;
  }

  .terminal-line:last-child {
    margin-bottom: 0;
  }

  .prompt {
    color: var(--cyan);
    margin-right: 0.5rem;
  }

  .cursor {
    animation: blink 1s step-end infinite;
  }

  @keyframes blink {
    0%, 100% { opacity: 1; }
    50% { opacity: 0; }
  }

  /* ========================================
     EVENTS
     ======================================== */

  .events {
    padding: 5rem 0;
    background:
      linear-gradient(180deg, var(--void) 0%, var(--dark) 50%, var(--void) 100%);
  }

  .section-header {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    margin-bottom: 0.5rem;
  }

  .section-marker {
    font-family: var(--font-display);
    font-size: 2rem;
    color: var(--cyan);
  }

  .section-header h2 {
    font-family: var(--font-display);
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 400;
    color: var(--white);
    margin: 0;
    letter-spacing: 0.1em;
  }

  .section-subtitle {
    text-align: center;
    font-family: var(--font-mono);
    font-size: 0.875rem;
    color: var(--gray-light);
    margin: 0 0 3rem;
  }

  .events-grid {
    display: grid;
    gap: 1.5rem;
  }

  @media (min-width: 768px) {
    .events-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .event-card {
    display: flex;
    background: var(--charcoal);
    border: 1px solid var(--gray);
    overflow: hidden;
    transition: all 0.3s;
  }

  .event-card:hover {
    border-color: var(--cyan-dim);
    box-shadow: 0 0 30px var(--cyan-glow);
  }

  .event-signal {
    width: 40px;
    background: var(--gray);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .signal-strength {
    display: flex;
    flex-direction: column-reverse;
    gap: 3px;
  }

  .signal-strength .bar {
    width: 16px;
    height: 4px;
    background: var(--cyan);
    opacity: 0.3;
  }

  .event-card:hover .signal-strength .bar {
    opacity: 1;
    animation: signal-pulse 0.5s ease-out;
  }

  .event-card:hover .signal-strength .bar:nth-child(1) { animation-delay: 0s; }
  .event-card:hover .signal-strength .bar:nth-child(2) { animation-delay: 0.1s; }
  .event-card:hover .signal-strength .bar:nth-child(3) { animation-delay: 0.2s; }
  .event-card:hover .signal-strength .bar:nth-child(4) { animation-delay: 0.3s; }

  @keyframes signal-pulse {
    0% { transform: scaleX(0); }
    100% { transform: scaleX(1); }
  }

  .event-content {
    padding: 1.5rem;
    flex: 1;
  }

  .event-date {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--amber);
    letter-spacing: 0.1em;
    margin-bottom: 0.5rem;
  }

  .event-content h3 {
    font-family: var(--font-display);
    font-size: 1.5rem;
    font-weight: 400;
    color: var(--white);
    margin: 0 0 0.5rem;
    letter-spacing: 0.05em;
  }

  .event-host {
    font-family: var(--font-mono);
    font-size: 0.8rem;
    color: var(--white-dim);
    margin-bottom: 0.75rem;
  }

  .host-label {
    color: var(--gray-light);
  }

  .event-content p {
    font-size: 0.9rem;
    color: var(--white-dim);
    line-height: 1.5;
    margin: 0 0 1rem;
  }

  .event-status {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-family: var(--font-mono);
    font-size: 0.7rem;
    color: var(--gray-light);
    letter-spacing: 0.1em;
  }

  .status-dot {
    width: 6px;
    height: 6px;
    background: var(--cyan);
    border-radius: 50%;
  }

  /* ========================================
     ANNOUNCEMENT
     ======================================== */

  .announcement {
    padding: 5rem 0;
    background: var(--void);
  }

  .announcement-card {
    position: relative;
    background: var(--charcoal);
    border: 2px solid var(--amber);
    overflow: hidden;
  }

  .static-band {
    height: 8px;
    background: repeating-linear-gradient(
      90deg,
      var(--amber) 0px,
      var(--amber) 2px,
      transparent 2px,
      transparent 4px
    );
    animation: static-scroll 0.5s linear infinite;
  }

  @keyframes static-scroll {
    0% { background-position: 0 0; }
    100% { background-position: 8px 0; }
  }

  .announcement-content {
    padding: 3rem 2rem;
    text-align: center;
  }

  .next-freq {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: 1.5rem;
  }

  .next-freq .label {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--gray-light);
    letter-spacing: 0.2em;
  }

  .next-freq .year {
    font-family: var(--font-display);
    font-size: 4rem;
    color: var(--amber);
    line-height: 1;
    text-shadow: 0 0 30px rgba(255, 149, 0, 0.5);
  }

  .announcement-content h2 {
    font-family: var(--font-display);
    font-size: 2.5rem;
    font-weight: 400;
    color: var(--white);
    margin: 0 0 0.5rem;
    letter-spacing: 0.1em;
  }

  .announcement-content > p {
    font-family: var(--font-mono);
    font-size: 1rem;
    color: var(--white-dim);
    margin: 0 0 2rem;
  }

  .announcement-actions {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1rem;
  }

  .btn-signal {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    background: var(--cyan);
    color: var(--void);
    padding: 0.875rem 1.5rem;
    font-family: var(--font-mono);
    font-size: 0.85rem;
    font-weight: 500;
    text-decoration: none;
    letter-spacing: 0.05em;
    transition: all 0.2s;
  }

  .btn-signal:hover {
    background: var(--white);
    box-shadow: 0 0 20px var(--cyan-glow);
  }

  .btn-icon {
    font-size: 1rem;
  }

  .btn-outline {
    display: inline-flex;
    align-items: center;
    border: 1px solid var(--gray-light);
    color: var(--white-dim);
    padding: 0.875rem 1.5rem;
    font-family: var(--font-mono);
    font-size: 0.85rem;
    text-decoration: none;
    letter-spacing: 0.05em;
    transition: all 0.2s;
  }

  .btn-outline:hover {
    border-color: var(--amber);
    color: var(--amber);
  }

  /* ========================================
     CLOSING
     ======================================== */

  .closing {
    padding: 4rem 0;
    background: var(--dark);
    border-top: 1px solid var(--gray);
  }

  .closing-content {
    text-align: center;
  }

  .closing-text {
    font-family: var(--font-mono);
    font-size: 1rem;
    color: var(--white-dim);
    margin: 0 0 0.25rem;
  }

  .closing-subtext {
    font-family: var(--font-mono);
    font-size: 0.8rem;
    color: var(--gray-light);
    margin: 0 0 2rem;
