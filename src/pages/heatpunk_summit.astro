<style>
  /* ========================================
     HEATPUNK DESIGN SYSTEM
     ======================================== */

  @import url('https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;500;700;800&family=IBM+Plex+Sans:wght@400;500;600&display=swap');

  :root {
    --black: #0a0a0a;
    --dark: #121212;
    --dark-alt: #1a1a1a;
    --gray: #2a2a2a;
    --gray-light: #888;
    --white: #f5f5f5;
    --orange: #ff6b00;
    --orange-light: #ff8c33;
    --red: #ff3d00;
    --green: #00ff41;
    --font-mono: 'JetBrains Mono', monospace;
    --font-sans: 'IBM Plex Sans', sans-serif;
  }

  .heatpunk-page {
    background: var(--black);
    color: var(--white);
    font-family: var(--font-sans);
    font-size: 14px;
    line-height: 1.5;
    overflow-x: hidden;
  }

  /* ========================================
     UTILITIES
     ======================================== */

  .section-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .section-header {
    margin-bottom: 2rem;
  }

  .section-tag {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--orange);
    display: block;
    margin-bottom: 0.5rem;
  }

  .section-title {
    font-family: var(--font-mono);
    font-size: clamp(1.5rem, 4vw, 2rem);
    font-weight: 700;
    letter-spacing: 0.05em;
    margin: 0;
  }

  .section-desc {
    color: var(--gray-light);
    margin-top: 0.5rem;
    font-size: 0.875rem;
  }

  .highlight {
    color: var(--orange);
    font-weight: 600;
  }

  .noise-overlay {
    position: absolute;
    inset: 0;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)'/%3E%3C/svg%3E");
    opacity: 0.03;
    pointer-events: none;
  }

  .scan-lines {
    position: absolute;
    inset: 0;
    background: repeating-linear-gradient(
      0deg,
      transparent,
      transparent 2px,
      rgba(0,0,0,0.1) 2px,
      rgba(0,0,0,0.1) 4px
    );
    pointer-events: none;
  }

  /* ========================================
     HERO
     ======================================== */

  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    overflow: hidden;
  }

  .hero-bg {
    position: absolute;
    inset: 0;
    background:
      radial-gradient(ellipse at 50% 100%, rgba(255,107,0,0.15) 0%, transparent 50%),
      radial-gradient(ellipse at 20% 80%, rgba(255,61,0,0.1) 0%, transparent 40%),
      radial-gradient(ellipse at 80% 80%, rgba(255,61,0,0.1) 0%, transparent 40%),
      linear-gradient(180deg, var(--black) 0%, var(--dark) 100%);
    animation: flameGlow 4s ease-in-out infinite;
  }

  @keyframes flameGlow {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.8; }
  }

  .hero-content {
    position: relative;
    z-index: 10;
    padding: 2rem;
  }

  .glitch-container {
    position: relative;
  }

  .hero-title {
    font-family: var(--font-mono);
    font-size: clamp(3rem, 15vw, 8rem);
    font-weight: 800;
    letter-spacing: 0.1em;
    margin: 0;
    background: linear-gradient(135deg, var(--orange) 0%, var(--red) 50%, var(--orange-light) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-shadow: 0 0 80px rgba(255,107,0,0.5);
    animation: textGlow 2s ease-in-out infinite;
  }

  @keyframes textGlow {
    0%, 100% { filter: brightness(1); }
    50% { filter: brightness(1.2); }
  }

  .hero-subtitle {
    font-family: var(--font-mono);
    font-size: clamp(1rem, 4vw, 1.5rem);
    font-weight: 400;
    letter-spacing: 0.3em;
    color: var(--white);
    margin: 0.5rem 0 0;
    opacity: 0.9;
  }

  .hero-tagline {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--green);
    letter-spacing: 0.2em;
    margin-top: 1.5rem;
  }

  .hero-meta {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0.5rem 1rem;
    margin-top: 2rem;
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--gray-light);
  }

  .meta-item .label {
    color: var(--orange);
  }

  .meta-divider {
    color: var(--gray);
    display: none;
  }

  @media (min-width: 640px) {
    .meta-divider { display: inline; }
  }

  .blink {
    animation: blink 1s step-end infinite;
  }

  @keyframes blink {
    0%, 100% { opacity: 1; }
    50% { opacity: 0; }
  }

  .hero-cta {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    margin-top: 2.5rem;
  }

  @media (min-width: 640px) {
    .hero-cta {
      flex-direction: row;
      justify-content: center;
    }
  }

  .btn-primary {
    position: relative;
