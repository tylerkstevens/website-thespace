---
import Layout from "@layouts/Layout.astro";
---

<Layout
  title="Heatpunk Summit 2026 | Denver"
  image="/assets/events/heatpunk_summit_2026/sponsor_deck/Slide1.png"
  description="Heatpunk Summit 2026 - The premier conference for bitcoin mining heat reuse. February 27-28, 2026 in Denver, CO."
>
  <div class="heatpunk-page">
    <!-- HERO -->
    <section class="hero">
      <div class="hero-bg"></div>
      <div class="noise-overlay"></div>
      <div class="scan-lines"></div>
      <div class="hero-content">
        <div class="glitch-container">
          <h1 class="hero-title" data-text="HEATPUNK">HEATPUNK SUMMIT</h1>
