---
import { getCollection } from "astro:content";
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import Link from "@components/ui/link.astro";
---

<Layout title="Heatpunk Summit">
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-r from-gray-900 to-black text-white py-20">
    <div class="absolute inset-0 bg-cover bg-center opacity-30" style="background-image: url('/assets/events/heatpunk_summit_2026/heatpunk_trojanhorse.png');"></div>
    <Container class="relative z-10 text-center">
      <Sectionhead>
        <Fragment slot="title">HEATPUNK SUMMIT</Fragment>
        <Fragment slot="desc">February 27th & 28th, 2026</Fragment>
      </Sectionhead>
      <div class="mt-8">
        <Link href="mailto:admin@heatpunks.org">
          Request Invitation
        </Link>
      </div>
      <div class="mt-6">
        <Link href="https://conference.denver.space/undermine-2025/talk/"> 
          Schedule Coming Soon (See Last Year's)
        </Link>
      </div>
    </Container>
  </section>

  <!-- Description Section -->
  <section class="py-16 bg-white">
    <Container>
      <h2 class="text-4xl font-bold text-black mb-6 text-center">Overview</h2>
      <div class="max-w-3xl mx-auto">
        <p class="text-xl text-gray-700 leading-relaxed">
          The Heatpunk Summit brings together all key stakeholders pushing forward the emerging industry of hashrate heating. The Heatpunks are a group of bitcoiners undermining the status-quo, striving to bring hashrate back home - into heating appliances and infrastructure. Over three days you will:
        </p>
        <ul class="list-disc pl-8 mt-6 text-gray-700 space-y-2">
          <li class="text-lg">Discuss and learn current innovations, challenges and trends</li>
          <li class="text-lg">Get hands on time with leading hashrate heating hardware</li>
          <li class="text-lg">Build relationships with key stakeholders changing the mining status-quo</li>
        </ul> 
        <p class="text-xl mt-6 text-gray-700 leading-relaxed font-semibold text-center">
          ASIC Designers, FOSS Developers, Firmware Builders, Control Experts, Heating Industry Veterans, Plumbers, HVAC Techs, Home Insurers, System Builders, Pleb Miners and more - All in the Same Room.
        </p>
      </div>
    </Container>
  </section>

  <!-- Last Year's Recap Section -->
  <section class="py-16 bg-gray-100">
    <Container>
      <h2 class="text-4xl font-bold text-black mb-6 text-center">Last Year's Recap</h2>
      <div class="max-w-3xl mx-auto text-center">
        <p class="text-xl text-gray-700 leading-relaxed">
          Missed last year? Check out highlights from the Inaugural Heatpunk Summit.
        </p>
        <div class="mt-6">
          <Link href="https://www.youtube.com/watch?v=c-NrYzmPRv8" target="_blank" style="primary" size="lg">
            Watch the 2025 Summit Recap
          </Link>
        </div>
      </div>
    </Container>
  </section>

  <!-- Image Section -->
  <section class="py-2 bg-gray-100">
    <Container>
      <div class="max-w-3xl mx-auto text-center">
        <img src="/assets/events/heatpunk_summit_2026/thrasher_heatpunk.png" alt="Heatpunk Summit Logo" class="mx-auto max-w-full h-auto max-h-[300px] object-contain" loading="lazy" width="600" height="300" />
      </div>
    </Container>
  </section>

  <!-- Summit Objectives Section -->
  <section class="py-16 bg-gray-100">
    <Container>
      <h2 class="text-4xl font-bold text-black mb-6 text-center">Summit Objectives</h2>
    <div class="max-w-3xl mx-auto">
      <ol class="list-decimal pl-8 mt-6 text-gray-700 space-y-3">
        <li class="text-lg">Overcome challenges for mining in homes and businesses</li>
        <li class="text-lg">Spark partnerships that accelerate product & services development</li>
        <li class="text-lg">Network with hyper-focused builders</li>
        <li class="text-lg">Continue learning and education to dismantle the proprietary mining empire</li>
      </ol>
    </div>
    </Container>
  </section>

  <!-- Date & Location Section -->
  <section class="py-16 bg-gradient-to-r from-gray-900 to-black text-white">
    <Container>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div>
          <h2 class="text-3xl font-bold mb-4">Dates & Times</h2>
          <ul class="list-disc pl-5 mt-4 space-y-2">
            <li>Friday, February 27 – Saturday, February 28, 2026</li>
            <li>Pre-Summit Ski Day & Evening Happy Hour - Thursday, February 26, 2026</li>
            <li>Summit programming will start 10 AM MST Friday morning on the 17th. Feel free to arrive anytime after 8 AM for coffee and breakfast.</li>
            <li>We'll conclude a full day of summit activities on Saturday afternoon around 3:00 PM MST.</li>
          </ul>
        </div>
        <div>
          <h2 class="text-3xl font-bold mb-4">Location</h2>
          <p class="mt-4">
            The Space — Denver's Bitcoin Hub<br/>
            3700 N Franklin St. Denver, CO
          </p>
          <ul class="list-disc pl-5 mt-4 space-y-2">
            <li>Easily accessible from Denver International Airport via Train (no rental car required).</li>
            <li>Ample accommodations nearby including hotels, restaurants, and bars within walking distance.</li>
            <li>Located in the heart of Denver's RiNo (River North) district.</li>
          </ul>
        </div>
      </div>
    </Container>
  </section>

  <!-- Venue Images Carousel -->
  <section class="py-16 bg-white">
    <Container>
      <h2 class="text-4xl font-bold text-black mb-6 text-center">Gallery</h2>
      <div class="carousel-container relative max-w-4xl mx-auto">
        <div class="carousel-wrapper overflow-hidden rounded-lg shadow-lg">
          <div class="carousel-track flex transition-transform duration-500 ease-in-out" id="carousel-track">
            <img src="/assets/events/heatpunk_summit_2026/IMG_6049.JPG" alt="Bitcoin Financial Services Summit Banner" class="carousel-image w-full flex-shrink-0 object-cover h-[400px]" loading="lazy" width="800" height="400" />
            <img src="/assets/venue/3700Franklin_Back.webp" alt="Bitcoin Financial Summit venue exterior back view" class="carousel-image w-full flex-shrink-0 object-cover h-[400px]" loading="lazy" width="800" height="400" />
            <img src="/assets/venue/3700Franklin_Front.webp" alt="Bitcoin Financial Summit venue exterior front view" class="carousel-image w-full flex-shrink-0 object-cover h-[400px]" loading="lazy" width="800" height="400" />
            <img src="/assets/venue/VenueEvent_deck_006.png" alt="Bitcoin Financial Summit venue interior event space" class="carousel-image w-full flex-shrink-0 object-cover h-[400px]" loading="lazy" width="800" height="400" />
            <img src="/assets/venue/VenueEvent_deck_007.png" alt="Bitcoin Financial Summit venue interior workspace" class="carousel-image w-full flex-shrink-0 object-cover h-[400px]" loading="lazy" width="800" height="400" />
            <img src="/assets/venue/VenueEvent_deck_014.png" alt="Bitcoin Financial Summit venue conference room" class="carousel-image w-full flex-shrink-0 object-cover h-[400px]" loading="lazy" width="800" height="400" />
            <img src="/assets/venue/VenueEvent_deck_016.png" alt="Bitcoin Financial Summit venue lounge area" class="carousel-image w-full flex-shrink-0 object-cover h-[400px]" loading="lazy" width="800" height="400" />
          </div>
        </div>
        <button class="carousel-btn carousel-prev absolute left-4 top-1/2 transform -translate-y-1/2 bg-black bg-opacity-70 text-white p-3 rounded-full hover:bg-opacity-90 transition" onclick="moveCarousel(-1)">‹</button>
        <button class="carousel-btn carousel-next absolute right-4 top-1/2 transform -translate-y-1/2 bg-black bg-opacity-70 text-white p-3 rounded-full hover:bg-opacity-90 transition" onclick="moveCarousel(1)">›</button>
        <div class="carousel-dots flex justify-center mt-4 space-x-2">
          <button class="dot w-3 h-3 rounded-full bg-gray-400 hover:bg-gray-600 transition" onclick="currentSlide(1)"></button>
          <button class="dot w-3 h-3 rounded-full bg-gray-400 hover:bg-gray-600 transition" onclick="currentSlide(2)"></button>
          <button class="dot w-3 h-3 rounded-full bg-gray-400 hover:bg-gray-600 transition" onclick="currentSlide(3)"></button>
          <button class="dot w-3 h-3 rounded-full bg-gray-400 hover:bg-gray-600 transition" onclick="currentSlide(4)"></button>
          <button class="dot w-3 h-3 rounded-full bg-gray-400 hover:bg-gray-600 transition" onclick="currentSlide(5)"></button>
          <button class="dot w-3 h-3 rounded-full bg-gray-400 hover:bg-gray-600 transition" onclick="currentSlide(6)"></button>
          <button class="dot w-3 h-3 rounded-full bg-gray-400 hover:bg-gray-600 transition" onclick="currentSlide(7)"></button>
        </div>
      </div>
    </Container>
  </section>

  <!-- Schedule Section -->
  <section class="py-16 bg-gradient-to-r from-gray-900 to-black text-white">
    <Container>
      <h2 class="text-4xl font-bold mb-6 text-center">Schedule</h2>
      <div class="max-w-3xl mx-auto">
        <p class="text-lg">
          The detailed event schedule will be emailed to attendees. General discussions include:
        </p>
        <ul class="list-disc pl-5 mt-4 space-y-2">
          <li>Bitcoin's value proposition for advisors</li>
          <li>Inheritance & trust planning</li>
          <li>Custody</li>
          <li>Bitcoin financial planning</li>
          <li>Spending bitcoin</li>
          <li>Bitcoin account practices</li>
          <li>Corporate treasury management with bitcoin</li>
          <li>Bitcoin & Insurance</li>
          <li>Bitcoin financial products</li>
          <li>Bitcoin lending</li>
        </ul>
      </div>
    </Container>
  </section>

  <!-- Why Attend & Who Should Attend -->
  <section class="py-16 bg-gray-100">
    <Container>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="bg-black p-8 rounded-lg shadow-lg text-white">
          <h2 class="text-3xl font-bold mb-4">Why Attend</h2>
          <ul class="list-disc pl-5 mt-4 space-y-2">
            <li><strong>High-impact network:</strong> meet RIAs, CPAs, asset managers, HNWI and FinTech builders already serving Bitcoin clients</li>
            <li><strong>Tactical sessions:</strong> custody and collateralized lending, estate planning, insurance coverage, and more</li>
            <li><strong>Deal flow:</strong> live product announcements and sponsor showcases mean you see opportunities first</li>
          </ul>
        </div>
        <div class="bg-black p-8 rounded-lg shadow-lg text-white">
          <h2 class="text-3xl font-bold mb-4">Who Should Attend</h2>
          <ul class="list-disc pl-5 mt-4 space-y-2">
            <li>Tax professionals</li>
            <li>Attorneys</li>
            <li>Insurance agents</li>
            <li>Asset managers</li>
            <li>Institutional and high-net-worth investors</li>
            <li>Wealth advisors</li>
            <li>Bitcoin-curious</li>
            <li>Lenders</li>
            <li>Fintech leaders</li>
          </ul>
        </div>
      </div>
    </Container>
  </section>

  <!-- Event Highlights Section -->
  <section class="py-16 bg-white">
    <Container>
      <h2 class="text-4xl font-bold text-black mb-6 text-center">Event Highlights</h2>
      <div class="max-w-3xl mx-auto">
        <ul class="list-disc pl-8 mt-6 text-gray-700 space-y-3">
          <li><strong>Golf Classic:</strong> 18 holes of networking before content kicks off</li>
          <li><strong>Keynotes:</strong> industry pioneers share hard-won lessons</li>
          <li><strong>Panel sessions:</strong> practitioners debate real-world case studies</li>
          <li><strong>Community meals & after-party:</strong> structured time to deepen relationships</li>
          <li><strong>Live launches:</strong> be first to see new financial products revealed on stage</li>
        </ul>
      </div>
    </Container>
  </section>

  <!-- Pricing & Get Involved -->
  <section class="py-16 bg-gradient-to-r from-gray-900 to-black text-white">
    <Container>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="bg-gray-800 p-8 rounded-lg shadow-lg">
          <h2 class="text-3xl font-bold mb-4">Pricing</h2>
          <ul class="list-disc pl-5 mt-4 space-y-2">
            <li><strong class="text-2xl">General Admission</strong> – <span class="font-bold text-2xl">210,000 Sats</span></li>
            <li><strong class="text-2xl">Member of The Space</strong> – <span class="font-bold text-2xl">50% Discount</span></li>
          </ul>
          <p class="mt-4">
            Registration includes all sessions, meals, and the after-party.
          </p>
        </div>
        <div class="bg-gray-800 p-8 rounded-lg shadow-lg">
          <h2 class="text-3xl font-bold mb-4">Interested in Getting Involved?</h2>
          <div class="flex flex-col items-center space-y-4 mt-8">
            <Link href="mailto:admin@heatpunks.org" target="_blank" style="primary" size="lg" class="hover:scale-105 transition-transform duration-300">
              Contact Us for Sponsorships or Suggest an Idea
            </Link>
            <Link href="mailto:admin@heatpunks.org" target="_blank" style="primary" size="lg" class="hover:scale-105 transition-transform duration-300">
              Did We Miss You? - Request Invitation
            </Link>
          </div>
        </div>
      </div>
    </Container>
  </section>

  <!-- Closing Statement -->
  <section class="py-16 bg-white">
    <Container>
      <p class="text-3xl text-center text-black font-bold">
        Shape the future of Bitcoin-powered finance—see you in Denver.
      </p>
    </Container>
  </section>

  <!-- FAQ Section -->
  <section class="py-16 bg-black text-white">
    <Container>
      <h2 class="text-4xl font-bold text-center mb-8">Frequently Asked Questions</h2>
      <div class="max-w-4xl mx-auto space-y-6">
        <div>
          <p class="font-semibold text-lg">Is this only for Bitcoin experts?</p>
          <p class="text-gray-400">No. Content is designed for finance professionals with varying levels of Bitcoin familiarity.</p>
        </div>
        <div>
          <p class="font-semibold text-lg">Will sessions qualify for CPE or CE credit?</p>
          <p class="text-gray-400">We are applying for credit in multiple disciplines; details announced in September.</p>
        </div>
        <div>
          <p class="font-semibold text-lg">What is the refund policy?</p>
          <p class="text-gray-400">Full refunds through January 1, 2025; substitutions allowed anytime.</p>
        </div>
      </div>
    </Container>
  </section>
</Layout>

<style>
  /* General Styling */
  body {
    font-family: 'Inter', sans-serif;
  }

  /* Hero Section */
  section {
    scroll-margin-top: 80px;
  }

  /* Carousel */
  .carousel-container {
    position: relative;
  }

  .carousel-image {
    object-fit: cover;
    height: 400px;
  }

  .carousel-btn {
    z-index: 10;
    font-size: 24px;
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .dot.active {
    background-color: #1f2937;
  }

  /* Responsive Adjustments */
  @media (max-width: 768px) {
    .carousel-image {
      height: 300px;
    }

    .carousel-btn {
      width: 36px;
      height: 36px;
      font-size: 20px;
    }

    .fixed.bottom-4.right-4 {
      bottom: 2rem;
      right: 2rem;
    }
  }
</style>

<script is:inline>
  let currentSlideIndex = 0;
  const totalSlides = 7;

  function moveCarousel(direction) {
    currentSlideIndex += direction;
    if (currentSlideIndex >= totalSlides) currentSlideIndex = 0;
    if (currentSlideIndex < 0) currentSlideIndex = totalSlides - 1;
    updateCarousel();
  }

  function currentSlide(index) {
    currentSlideIndex = index - 1;
    updateCarousel();
  }

  function updateCarousel() {
    const track = document.getElementById('carousel-track');
    const dots = document.querySelectorAll('.dot');

    track.style.transform = `translateX(-${currentSlideIndex * 100}%)`;

    dots.forEach((dot, index) => {
      dot.classList.toggle('active', index === currentSlideIndex);
    });
  }

  // Auto-rotate carousel every 5 seconds
  setInterval(() => {
    moveCarousel(1);
  }, 5000);

  // Initialize
  updateCarousel();
</script>