<style>
  .grid-container {
    display: grid;
    grid-gap: 16px;
  }

  /* For large screens: 3 columns, 2 rows */
  @media (min-width: 1024px) {
    .grid-container {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  /* For medium screens: 2 columns, 3 rows */
  @media (min-width: 768px) and (max-width: 1023px) {
    .grid-container {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  /* For small screens: 1 column, 6 rows */
  @media (max-width: 767px) {
    .grid-container {
      grid-template-columns: 1fr;
    }
  }

  img {
    width: 100%;
    height: auto;
  }

  .venue-image {
  object-fit: cover; /* Maintain aspect ratio and fill the space */
  border-radius: 10px; /* Optional: keep the rounded corners */
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Optional: add a shadow */
  }

  .circle-image {
    width: 100%;
    height: auto;
    aspect-ratio: 1 / 1; /* Ensure it's always a square */
    border-radius: 50%; /* Make it circular */
    object-fit: cover; /* Crop to fit within the circle */
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Optional: Add a shadow for better aesthetics */
    transition: transform 0.3s ease; /* Add hover effect */
  }

  .circle-image:hover {
    transform: scale(1.1); /* Slight zoom on hover */
  }
</style>